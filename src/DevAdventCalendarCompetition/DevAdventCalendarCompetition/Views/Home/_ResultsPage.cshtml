@model PaginatedCollection<DevAdventCalendarCompetition.Vms.TestResultEntryVm>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-xs-1">#</th>
            <th>Użytkownik</th>
            <th>Poprawne odpowiedzi</th>
            <th>Błędne odpowiedzi</th>
            <th>Suma punktów</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            var testResult = Model[i];
            <tr>
                <th scope="row" class="col-xs-1">@(Model.PageIndex <= 1 ? i + 1 : (Model.PageSize * (Model.PageIndex - 1)) + i + 1)</th>
                <td>@testResult.FullName</td>
                <td>@testResult.CorrectAnswers</td>
                <td>@testResult.WrongAnswers</td>
                <td>@testResult.Week1Points</td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-xs-12">
        <a asp-controller="Home"
           asp-action="Results"
           asp-route-pageIndex="@(Model.PageIndex - 1)"
           class="chris_btn @prevDisabled">
            Wstecz
        </a>
        <a asp-controller="Home"
           asp-action="Results"
           asp-route-pageIndex="@(Model.PageIndex + 1)"
           class="chris_btn @nextDisabled">
            Dalej
        </a>
    </div>
</div>
