                    @if (Model.TotalTestResults != null)
                    {
                        <ul class="nav nav-tabs" id="results" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#week1" aria-controls="week1" role="tab" data-toggle="tab">Tydzień 1</a>
                                <a href="#week2" aria-controls="week2" role="tab" data-toggle="tab">Tydzień 2</a>
                                <a href="#week3" aria-controls="week3" role="tab" data-toggle="tab">Tydzień 3</a>
                                <a href="#full" aria-controls="full" role="tab" data-toggle="tab">Pełny ranking</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="week1">
                                @if (Model.TotalTestResults.TryGetValue(1, out var results))
                                {
                                    var prevDisabled = !results.HasPreviousPage ? "disabled" : "";
                                    var nextDisabled = !results.HasNextPage ? "disabled" : "";

                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th class="col-xs-1">#</th>
                                            <th>Użytkownik</th>
                                            <th>Poprawne odpowiedzi</th>
                                            <th>Błędne odpowiedzi</th>
                                            <th>Suma punktów</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @for (var i = 0; i < results.Count; i++)
                                        {
                                            var testResult = results[i];
                                            <tr>
                                                <th scope="row" class="col-xs-1">@(results.PageIndex <= 1 ? i + 1 : (results.PageSize * (results.PageIndex - 1)) + i + 1)</th>
                                                <td>@testResult.FullName</td>
                                                <td>@testResult.CorrectAnswers</td>
                                                <td>@testResult.WrongAnswers</td>
                                                <td>@testResult.Week1Points</td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>

                                    <div class="row">
                                        <div class="col-xs-12">
                                            <a asp-controller="Home"
                                               asp-action="Results"
                                               asp-route-pageIndex="@(results.PageIndex - 1)"
                                               class="chris_btn @prevDisabled">
                                                Wstecz
                                            </a>
                                            <a asp-controller="Home"
                                               asp-action="Results"
                                               asp-route-pageIndex="@(results.PageIndex + 1)"
                                               class="chris_btn @nextDisabled">
                                                Dalej
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <h2 class="mb-30">
                                        Wyniki dla pierwszego tygodnia rywalizacji poznasz w niedzielę, 8 grudnia o godzinie 20:00.
                                    </h2>
                                }
                            </div>
                        </div>

