@{
    ViewBag.Title = "TEST" + Model.TestNumber + " answered";
}
@model DevAdventCalendarCompetition.Vms.AnswerVm

<div class="jumbotron">
    <h1>You have answered TEST @Model.TestNumber</h1>
</div>
<div class="row">
    Your response came at @Model.TestAnswerVm.AnsweringTime.ToLongTimeString() - it took you @Model.TestAnswerVm.AnsweringTimeOffset.Minutes m. @Model.TestAnswerVm.AnsweringTimeOffset.Seconds s. @Model.TestAnswerVm.AnsweringTimeOffset.Milliseconds ms to do it.
</div>