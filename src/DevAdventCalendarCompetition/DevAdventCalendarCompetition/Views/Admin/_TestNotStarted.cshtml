@model DevAdventCalendarCompetition.Services.Models.TestDto

<div class="row">
    <div class="col-md-12">
        <h3>Test @Model.Number</h3>

        <p>
            <strong>Status: </strong>@ViewData["Status"]
        </p>
        <p>
            <strong>Czas rozpoczęcia: </strong> @Model.StartDate.Value.ToLongDateString()  @Model.StartDate.Value.ToShortTimeString() - <strong>Czas zakończenia: </strong> @Model.EndDate.Value.ToLongDateString() @Model.EndDate.Value.ToShortTimeString()
        </p>
    </div>
    <div class="col-md-12">
        <form class="form-inline" method="POST" action="/Admin/StartTest">
            @Html.Hidden("testId", Model.Id)
            <div class="form-group">
                <label for='timeString'>Ustaw, ile ma trwać test (w minutach)</label>
                <input id='timeString' type="text" name="minutesString" class="form-control" placeholder="domyślnie  20 minut">
            </div>
            <button type="submit" class="btn btn-default">Rozpocznij</button>
        </form>
    </div>
</div>