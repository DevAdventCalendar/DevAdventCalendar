@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Zapomniałeś/aś hasła?";
}

<div class="breadcrumb_area mb-30">
    <div class="container">
        <div class="row">
            <div class="breadcrumb_wrapper">
                <div class="page_title">
                    <h3>@ViewData["Title"]</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-30">
    <div class="row">
        <div class="col-md-12">
            <p>Na podany adres email wyślemy Ci link do zmiany hasła</p>
            <form asp-action="ForgotPassword" method="post" class="contact_form">
                <div asp-validation-summary="All" class="text-danger mb-20"></div>
                <div class="row">
                    <div class="col-sm-9">
                        <div class="form-group">
                            <div class="text_field text_field_default">
                                <input asp-for="Email" placeholder="Podaj swój email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <button type="submit" class="chris_btn">Resetuj</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
