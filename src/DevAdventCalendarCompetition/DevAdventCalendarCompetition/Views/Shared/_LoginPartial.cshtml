@using DevAdventCalendarCompetition.Services
@using static DevAdventCalendarCompetition.Resources.ViewsMessages

@inject IdentityService IdentityService

@if (IdentityService.IsSignedIn(User))
{
    <ul>
        <li class="mt-30">
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@ManageYourAccount</a>
        </li>
        <li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" class="as_link">@SignOut</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul>
        <li class="mt-30">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="active">@Register</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">@SignIn</a>
        </li>
    </ul>
}