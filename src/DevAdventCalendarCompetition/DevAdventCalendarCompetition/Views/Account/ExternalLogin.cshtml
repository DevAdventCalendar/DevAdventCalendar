@using Microsoft.AspNetCore.Mvc.ModelBinding
@using static DevAdventCalendarCompetition.Resources.ViewsMessages
@model ExternalLoginViewModel
@{
    ViewData["Title"] = @Registration;
}

<div class="breadcrumb_area mb-30">
    <div class="container">
        <div class="row">
            <div class="breadcrumb_wrapper">
                <div class="page_title">
                    <h3>@ViewData["Title"]</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-30">
    <div class="row">
        <div class="col-md-12">
            <div class="area_title">
                <h3 class="black mb-20">@ConnectAccount @ViewData["LoginProvider"]</h3>
            </div>
            <p>
                @ExternalRegistrationDescriptionPart1 <strong>@ViewData["LoginProvider"]</strong>.
                @ExternalRegistrationDescriptionPart2
            </p>

            <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="contact_form">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="form-group">
                            <div class="text_field text_field_default">
                                <input asp-for="UserName" placeholder="UserName" />
                            </div>
                            <div class="text_field text_field_default">
                                <input asp-for="Email" placeholder="Email" />
                            </div>
                            <span class="text-danger">@Html.ValidationSummary()</span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <button type="submit" class="chris_btn">@Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
